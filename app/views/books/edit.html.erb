<div class="conteiner">
<h2>Editing Book</h2>



<% if @book.errors.any? %>
  <div class="errors-message"><%= @book.errors.count %> errors prohibited this book from being saved:</div>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>


<div>
  <%= f.submit 'Update Book' %>
</div>
<div class="button-button">
  <%= link_to "Show", book_path(@book) %>
  |
  <%= link_to "Back", books_path %>
</div>

<% end %>
</div>