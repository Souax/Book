<div class="conteiner">
<h1>Books</h1>

  <table>
    <thead>
     <tr>
      <th class="top-title">Title  </th>
      <th class="top-body">Body</th>
      <th colspan="3"></th>
     </tr>
   </thead>
   <tbody>
    <% @books.each do |book| %>
   <tr>
    <td><%=  book.title %></td>
    <td><%= book.body %></td>
    
    <td>
     <div class="button-button show">
     <%= link_to "Show", book_path(book) %>
     </div>
    </td>
    <td>
     <div class="button-button show">
     <%= link_to "Edit", edit_book_path(book) %>
     </div>
    </td>
    <td>
     <div class="button-button show">
     <%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "本当に削除しますか？" %>
     </div>
    </td>
   </tr>
    <% end %>
   </tbody>
 </table>


<h3 class="newbook">New book</h3>
<% if @book.errors.any? %>
 <div class="errors-message"><%= @book.errors.count %>errors prohibited this book from being saved:</div>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book , url: '/books', method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>
	<div>
  <%= f.submit 'Create Book' %>
  </div>
<% end %>
</div>